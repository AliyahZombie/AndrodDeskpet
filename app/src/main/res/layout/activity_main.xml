<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:layout_row="10"
    android:layout_column="3">

    <TextView
        android:id="@+id/petClass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="宠物类型选择"
        android:layout_row="0"
        android:layout_column="0"/>

    <Spinner
        android:id="@+id/modeList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:layout_column="1"
        android:entries="@array/mode_list" />

    <TextView
        android:id="@+id/petName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="宠物取名"
        android:layout_row="1"
        android:layout_column="0"/>

    <EditText
        android:id="@+id/editName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="1"
        android:layout_column="1"
        android:hint="输入宠物名字"
        android:textSize="20sp" />

    <Button
        android:id="@+id/bn_createPet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="2"
        android:layout_column="0"
        android:text="创建宠物"
        android:textSize="20sp" />

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="选择宠物"
        android:textSize="20sp"
        android:layout_row="3"
        android:layout_column="0"/>

    <Spinner
        android:id="@+id/petNameList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="3"
        android:layout_column="1"
        android:entries="@array/mode_list" />

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="宠物图像"
        android:textSize="20sp"
        android:layout_row="4"
        android:layout_column="0"/>

    <ImageView
        android:layout_height="50dp"
        android:layout_width="50dp"
        android:id="@+id/showPetImg"
        android:layout_gravity="start"
        android:layout_row="4"
        android:layout_column="1"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="宠物昵称"
        android:textSize="20sp"
        android:layout_row="5"
        android:layout_column="0"/>

    <TextView
        android:id="@+id/showPetName"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textSize="20sp"
        android:layout_row="5"
        android:layout_column="1"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="宠物类型"
        android:textSize="20sp"
        android:layout_row="6"
        android:layout_column="0"/>

    <TextView
        android:id="@+id/showPetMode"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="宠物类型"
        android:textSize="20sp"
        android:layout_row="6"
        android:layout_column="1"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="宠物年龄"
        android:layout_row="7"
        android:layout_column="0"/>

    <TextView
        android:id="@+id/petAgeView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="7"
        android:layout_column="1"/>

    <Button
        android:id="@+id/bn_show"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="释放宠物"
        android:textSize="20sp"
        android:layout_row="8"
        android:layout_column="0"/>

    <Button
        android:id="@+id/bn_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="8"
        android:layout_column="1"
        android:text="收回宠物"
        android:textSize="20sp" />

    <Button
        android:id="@+id/bn_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="9"
        android:layout_column="0"
        android:text="丢弃宠物"
        android:textSize="20sp"/>


</GridLayout>